{
  "categories": [
    {
      "title": "# Added",
      "labels": ["type/feature", "pr/feature"]
    },
    {
      "title": "# Fixed",
      "labels": ["type/bug", "pr/fix"]
    },
    {
      "title": "# Changed",
      "labels": ["type/refactoring", "pr/update"]
    },
    {
      "title": "# Documentation",
      "labels": ["type/docs", "pr/docs"]
    }
  ],
  "ignore_labels": [
    "changelog-ignore"
  ],
  "sort": "ASC",
  "template": "${{CHANGELOG}}\n\n<details>\n<summary>Uncategorized</summary>\n\n${{UNCATEGORIZED}}\n</details>",
  "pr_template": "- ${{TITLE}} (#${{NUMBER}})",
  "empty_template": "- no changes",
  "label_extractor": [
    {
      "pattern": "(.) (.+)",
      "target": "$1"
    },
    {
      "pattern": "(.) (.+)",
      "target": "$1",
      "on_property": "title"
    }
  ],
  "transformers": [
    {
      "pattern": "[\\-\\*] (\\[(...|TEST|CI|SKIP)\\])( )?(.+?)\n(.+?[\\-\\*] )(.+)",
      "target": "- $4\n  - $6"
    }
  ],
  "max_tags_to_fetch": 200,
  "max_pull_requests": 200,
  "max_back_track_time_days": 365,
  "exclude_merge_branches": [
    "Owner/qa"
  ],
  "tag_resolver": {
    "method": "semver"
  }
}
